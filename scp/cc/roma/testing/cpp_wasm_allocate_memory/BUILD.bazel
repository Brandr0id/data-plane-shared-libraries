load("@emsdk//emscripten_toolchain:wasm_rules.bzl", "wasm_cc_binary")
load("@google_privacysandbox_servers_common//third_party:emscripten_deps1.bzl", "STANDALONE_WASM_LINKOPTS")
load("@rules_cc//cc:defs.bzl", "cc_binary")

package(default_visibility = ["//visibility:private"])

cc_binary(
    name = "allocate_memory",
    srcs = ["allocate_memory.cc"],
    #Set the memory size to be 10MB
    linkopts = STANDALONE_WASM_LINKOPTS + ["-sINITIAL_MEMORY=10mb"],
    # This target won't build successfully on its own because of missing emscripten
    # headers etc. Therefore, we hide it from wildcards.
    tags = ["manual"],
)

wasm_cc_binary(
    name = "cpp_wasm_allocate_memory",
    cc_target = ":allocate_memory",
    outputs = [
        "allocate_memory.wasm",
    ],
    tags = ["manual"],
    visibility = ["//visibility:public"],
)
