build --verbose_failures
build --client_env=CC=clang
build --cxxopt=-std=c++17
build --copt=-Werror=return-type
build --per_file_copt=external/com_github_google_quiche/quiche@-Wno-private-header
build -c opt
build --output_filter='^//((?!(third_party):).)*$'`
build --color=yes
build --@io_bazel_rules_docker//transitions:enable=false
build --client_env=BAZEL_CXXOPTS=-std=c++17

# Required for Roma sandboxed
build --cxxopt=-fbracket-depth=512
build --per_file_copt=.*sandboxed_api.*@-Wno-return-type


# Required to build OpenTelemetry with Abseil
build --@io_opentelemetry_cpp//api:with_abseil
# Required to build OpenTelemtry with logs API.
# TODO(b/287675870): Delete the following when the feature is no longer experimental.
build --copt -DENABLE_LOGS_PREVIEW

test --test_output=errors
